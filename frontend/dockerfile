# Node 18 для React
FROM node:18-alpine

WORKDIR /app

# Dependencies
COPY package*.json ./
RUN npm ci --only=production

# Build
COPY . .
RUN npm run build

# Serve static (nginx)
FROM nginx:alpine
COPY --from=0 /app/build /usr/share/nginx/html
# Опционально для proxy к backend
COPY nginx.conf /etc/nginx/conf.d/default.conf  
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]